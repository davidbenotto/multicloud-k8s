{
  "name": "clusters-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:start": "docker compose -f docker/docker-compose.yml up -d",
    "db:stop": "docker compose -f docker/docker-compose.yml down",
    "predev": "npm run db:start",
    "dev": "concurrently --names \"API,WEB\" --prefix-colors \"blue,magenta\" \"npm run dev -w apps/api\" \"npm run dev -w apps/web\"",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@aws-sdk/client-iam": "^3.980.0",
    "@aws-sdk/client-sts": "^3.980.0",
    "@azure/arm-authorization": "^9.0.0",
    "@azure/arm-resources": "^7.0.0",
    "@azure/identity": "^4.13.0",
    "crypto": "^1.0.1",
    "google-auth-library": "^10.5.0"
  }
}
